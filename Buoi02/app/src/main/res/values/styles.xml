<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#388e3c</item>
        <item name="android:textSize">@dimen/sp_24</item>
        <item name="android:background">@android:color/holo_green_light</item>
    </style>

    <style name="CustomStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">32sp</item>
       <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">#69F0AE</item>
        <item name="android:colorPrimaryDark">#1B5E20</item>
        <item name="android:colorAccent">#B9F6CA</item>
    </style>
</resources>
